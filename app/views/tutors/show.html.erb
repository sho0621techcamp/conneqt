<%= render  "shared/second-header" %>

<div class="main">
  <div class="inner">
    <div class="tutor__wrapper">
      <h2 class="page-heading text-center mt-5 mb-5"><%= "#{@tutor.tutor_name}さん" %></h2>
        <div class="container">
          <div class="tutor-image text-center">
            <%= image_tag @tutor.image.variant(resize:'400x400') %>
          </div>
          <table class="table mt-5"> 
            <tbody>
              <tr>
                <th class="table__col1">名前</th>
                <td class="table__col2"><%= @tutor.tutor_name %></td>
              </tr>
              <tr>
                <th class="table__col1">自己紹介</th>
                <td class="table__col2"><%= @tutor.tutor_introduction %></td>
              </tr>
              <tr>
                <th class="table__col1">得意な言語</th>
                <td class="table__col2">
                  <% @tutor.tags.each do |tag| %>
                    <div class="badge badge-light mr-4" id="tag-badge">#<%= tag.name %></div>
                  <% end %>  
                </td>
              </tr>
              <tr>
                <th class="table__col1">GitHubアカウント</th>
                <td class="table__col2"><%= link_to "#{@tutor.github_account}",  "#{@tutor.github_account}" %></td>
              </tr>
            </tbody>
          </table>
          <div class="question-btn">
              <button class="btn btn-danger">
                <%= link_to "質問する", room_path, class: "red-btn" %>
              </button>
          </div>
        </div>
    </div>
  </div>
</div>

<%= render  "shared/second-footer" %>