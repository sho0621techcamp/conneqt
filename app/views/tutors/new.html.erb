<%= render "shared/second-header" %>

<%= form_with model: @tutor, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      チューター登録
    </h1>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">プロフィール画像</label>
      <span class="dispensable">任意</span>
    </div>
    <%= f.file_field :image, id:"item-image" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :tutor_name, class:"input-default", id:"tutor_name", placeholder:"例) conneqt太郎", maxlength:"40" %>
  </div>

  <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">自己紹介</label>
        <span class="dispensable">任意</span>
      </div>
      <%= f.text_area :tutor_introduction, class:"intro-text", id:"tutor_introduction" %>
    </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">得意な言語</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:tag_ids, Tag.all, :id, :name, {}, {class: "form-control js-searchable", multiple: true, include_hidden: false}) %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">GitHubアカウント</label>
      <span class="dispensable">任意</span>
    </div>
    <%= f.url_field :github_account, class:"input-default" %>
  </div>

  <div class="form-group">
    <h2 class='form-bottom-text'>
      「登録」のボタンを押すことにより、
      <span>利用規約</span>
      <br>に同意したものとみなします
    </h2>
  </div>
  
  <div class='register-btn'>
    <%= f.submit "登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
